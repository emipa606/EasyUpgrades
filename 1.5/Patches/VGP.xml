            <compClass>EasyUpgrades.CompDowngrade</compClass>
            <linkedThing>TableLoom</linkedThing>
            <keyedTooltipString>EU.DowngradeLoom</keyedTooltipString>
            <refundedResources>
              <Steel>55</Steel>
              <ComponentIndustrial>2</ComponentIndustrial>
            </refundedResources>
          </li>
        </value>
      </li>
    </operations>
  </Operation>
